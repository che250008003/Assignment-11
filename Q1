#include <iostream>
using namespace std;

int main() {
    int* sales_figures = new int[100];  

    for (int i = 0; i < 100; ++i) {
        sales_figures[i] = 0;  
    }

    cout << "Original size: 100" << std::endl;

    int* resized_sales_figures = new int[200];  

    for (int i = 0; i < 100; ++i) {
        resized_sales_figures[i] = sales_figures[i]; 
    }

    delete[] sales_figures;
    
    sales_figures = resized_sales_figures;

    cout << "New size: 200" << std::endl;

    delete[] sales_figures;

    return 0;
}
